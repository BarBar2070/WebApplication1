@model IEnumerable<WebApplication1.Domain.Entities.PostEntity>
@{
    ViewBag.Title = "Index";
}
<div class="container mt-3" align="center">
    <h2 style="color:black;">Admin Page</h2>
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col" style="color:black;">#</th>
                <th scope="col" style="color:black;">Title</th>
                <th scope="col" style="color:black;">Image</th>
                <th scope="col" style="color:black;">Price</th>
                <th scope="col" style="        color: black;">Description</th>
                <th scope="col" style="color:black;">Post Date</th>
                <th scope="col" style="color:black;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var post in Model)
                {
            <tr>
                <th scope="row" style="color:black;">@post.PostId</th>
                <td style="color:black;">@post.Title</td>
                <td style="color:black;"><a href="@post.ImageUrl" target="_blank" style="color:black;">Access</a></td>
                <td style="color:black;">@post.Price</td>
                <td style="color:black;">@post.PostContent</td>
                <td style="color:black;">@post.Date</td>
                <td>
                    <a href="/Admin/Edit/@post.PostId" type="button" class="btn btn-primary">Edit</a>
                    <a href="/Admin/Delete/@post.PostId" type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>

                }
            }
            else
            {
                <tr>
                    <th colspan="6" style="        color: black;
">No entries found</th>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/Add" type="button" class="btn btn-secondary btn-sm">Add Post</a>
</div>

