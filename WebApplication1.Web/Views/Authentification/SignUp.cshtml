@model WebApplication1.Web.Models.UserRegisterModel
@{
    ViewBag.Title = "Inregistrare";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/SignIn.css">
</head>

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Inregistrare</h5>
                    <hr class="my-4">
                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("SignUp", "Authentification", FormMethod.Post, new { @id = "registerForm", @class = "form-signup" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-label-group">
                            <label for="inputEmail">Adresa de email</label>
                            @Html.TextBoxFor(m => m.Login, new { type = "email", placeholder = "Adresa de email", id = "email", name = "email", @class = "form-control" })
                        </div>
                        <div class="form-label-group">
                            <label for="inputPassword">Parola</label>
                            @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Parola", id = "password", name = "password", @class = "form-control" })
                        </div>
                        <div class="form-label-group">
                            <label for="inputPassword">Confirma Parola</label>
                            @Html.TextBoxFor(m => m.RePassword, new { type = "password", placeholder = "Confimati parola", id = "repassword", name = "repassword", @class = "form-control" })
                        </div>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Inregistrare</button>
                    }

                    <div class="text-center">Aveti deja un Cont? <a href="/Authentification/SignIn">Autentificati-va</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

