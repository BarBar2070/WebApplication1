
@{
    ViewBag.Title = "Contacte";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/SignIn.css">
</head>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="fa fa-envelope"></i> Contactează-ne.
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Nume</label>
                            <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Nume" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Adresa de email</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Adresa de email" required>

                        </div>
                        <div class="form-group">
                            <label for="message">Mesajul</label>
                            <textarea class="form-control" id="message" rows="6" required></textarea>
                        </div>
                        <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Trasmite</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-4">
            <div class="card bg-light mb-3">
                <div class="card-header bg-success text-white text-uppercase"><i class="fa fa-home"></i> Adresa noastră</div>
                <div class="card-body">
                    <p>str. Studentilor 2/3</p>
                    <p>2029 Chișinău</p>
                    <p>Republica Moldova</p>
                    <p>Email : alimolldova@gmail.com</p>
                    <p>Tel. +373 45 22 22</p>

                </div>

            </div>
        </div>
    </div>
</div>


