@model IEnumerable<WebApplication1.Domain.Entities.PostEntity>
@using System.Web.Optimization
@using WebApplication1.Web.Extensions

@{
    var user = System.Web.HttpContext.Current.GetMySessionObject();
}
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Shopping online</h1>

            <div class="list-group">
                <a href="#" class="list-group-item">BĂRBAȚI</a>
                <a href="#" class="list-group-item">FEMEI</a>
                <a href="#" class="list-group-item">COPII</a>
            </div>

        </div>

        <div class="col-lg-9  ">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/Content/imgs/1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/imgs/2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/imgs/3.png" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/imgs/4.png" alt="Four slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            @if (Model.Count() > 0)
            {
                <div class="row">
                    @foreach (var post in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                    <a href="/Home/Detail/@post.PostId"><img class="card-img-top" src="@post.ImageUrl" alt=""></a>

                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="/Home/Detail/@post.PostId">@post.Title</a>
                                        </h4>
                                        <h5>@post.Price Lei </h5>
                                        <p class="card-text">@post.PostContent</p>
                                    </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</div>
